# <%= @daemon %>
#
# <%= @description %>

description "<%= @description %>"
author "Chris Aumann <me@chr4.org>"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

<% if @user %>
setuid <%= @user %>
<% end -%>

<% if @env %>
env <%= @env %>
<% end -%>

<% if @chdir %>
chdir <%= @chdir %>
<% end -%>

respawn

exec <%= @daemon %>
